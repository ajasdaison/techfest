---
import "../../styles/global.css"
import Layout from "../../layouts/Layout.astro";
import { createBEClient } from "../../lib/supabase-admin";

const supabase = createBEClient({
  request: Astro.request,
  cookies: Astro.cookies,
});

const { data: auth } = await supabase.auth.getUser();
if (!auth.user) return Astro.redirect("/");

const { data: profile } = await supabase
  .from("profiles")
  .select("role")
  .eq("id", auth.user.id)
  .single();

if (profile?.role !== "admin") {
  return Astro.redirect("/dashboard");
}

const selectedSlug = Astro.url.searchParams.get("program");

// FIX: Removed 'title' from select as it doesn't exist in your SQL schema
const { data: programs, error: progError } = await supabase
  .from("programs")
  .select("id, slug, type")
  .order("slug");

let registrations = [];

if (selectedSlug) {
  const { data, error } = await supabase
    .from("registrations")
    .select(`
      id,
      participant_name,
      email,
      phone,
      attended,
      programs!inner (
        slug
      )
    `)
    .eq("programs.slug", selectedSlug)
    .order("participant_name");

  if (!error) registrations = data;
}
---

<Layout title="Techfest Admin | Control Center">
  <main class="min-h-screen bg-[#0f172a] text-slate-200 p-4 md:p-8 font-sans">
    <div class="max-w-7xl mx-auto">
      
      <header class="mb-10 flex flex-col md:flex-row md:items-center justify-between gap-4 border-b border-slate-700 pb-6">
        <div>
          <h1 class="text-4xl font-extrabold tracking-tight bg-gradient-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">
            TECHFEST COMMAND CENTER
          </h1>
          <p class="text-slate-400 mt-1">Manage registrations and real-time attendance</p>
        </div>
        
        <div class="flex items-center gap-2 bg-slate-800/50 p-1 rounded-lg border border-slate-700">
           <span class="px-3 py-1 text-xs font-bold uppercase tracking-wider text-cyan-400">Status: Live</span>
        </div>
      </header>

      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        
        <aside class="lg:col-span-1 space-y-6">
          <div class="bg-slate-800/40 border border-slate-700 p-6 rounded-2xl backdrop-blur-sm">
            <label for="program" class="block text-sm font-semibold uppercase tracking-widest text-slate-400 mb-4">
              Select Department/Event
            </label>
            <form method="get">
              <select
                id="program"
                name="program"
                class="w-full bg-slate-900 border border-slate-600 rounded-xl px-4 py-3 text-white focus:ring-2 focus:ring-cyan-500 outline-none transition-all cursor-pointer appearance-none"
                onchange="this.form.submit()"
              >
                <option value="">Choose an event...</option>
                {programs?.map(p => (
                  <option value={p.slug} selected={p.slug === selectedSlug}>
                    {p.slug.toUpperCase()} ({p.type})
                  </option>
                ))}
              </select>
            </form>
            
            {selectedSlug && (
              <div class="mt-6 pt-6 border-t border-slate-700">
                <div class="text-xs text-slate-500 uppercase mb-1">Total Registrations</div>
                <div class="text-3xl font-mono font-bold text-cyan-400">{registrations.length}</div>
              </div>
            )}
          </div>
        </aside>

        <section class="lg:col-span-3">
          {!selectedSlug ? (
            <div class="h-64 flex flex-col items-center justify-center border-2 border-dashed border-slate-700 rounded-2xl text-slate-500">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mb-4 opacity-20" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              <p>Select a program from the sidebar to view participants</p>
            </div>
          ) : (
            <div class="bg-slate-800/40 border border-slate-700 rounded-2xl overflow-hidden backdrop-blur-sm">
              <div class="overflow-x-auto">
                <table class="w-full text-left border-collapse">
                  <thead>
                    <tr class="bg-slate-900/50 border-b border-slate-700">
                      <th class="p-4 font-semibold text-cyan-400 uppercase text-xs tracking-wider">Participant</th>
                      <th class="p-4 font-semibold text-cyan-400 uppercase text-xs tracking-wider">Contact Info</th>
                      <th class="p-4 font-semibold text-cyan-400 uppercase text-xs tracking-wider text-center">Attendance</th>
                    </tr>
                  </thead>
                  <tbody class="divide-y divide-slate-700">
                    {registrations.length === 0 ? (
                      <tr>
                        <td colspan="3" class="p-8 text-center text-slate-500">No participants registered yet.</td>
                      </tr>
                    ) : (
                      registrations.map(r => (
                        <tr class="hover:bg-slate-700/30 transition-colors group">
                          <td class="p-4">
                            <div class="font-bold text-white group-hover:text-cyan-300 transition-colors">{r.participant_name}</div>
                            <div class="text-xs text-slate-500 mt-0.5">ID: {r.id.split('-')[0]}</div>
                          </td>
                          <td class="p-4">
                            <div class="text-sm">{r.email}</div>
                            <div class="text-xs text-slate-500 italic">{r.phone}</div>
                          </td>
                          <td class="p-4 text-center">
                            {r.attended ? (
                              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-emerald-500/10 text-emerald-400 border border-emerald-500/20">
                                PRESENT
                              </span>
                            ) : (
                              <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-rose-500/10 text-rose-400 border border-rose-500/20">
                                ABSENT
                              </span>
                            )}
                          </td>
                        </tr>
                      ))
                    )}
                  </tbody>
                </table>
              </div>
            </div>
          )}
        </section>
      </div>
    </div>
  </main>
</Layout>

<style>
  /* Optional: Add a subtle grid background */
  main {
    background-image: radial-gradient(#1e293b 1px, transparent 1px);
    background-size: 40px 40px;
  }
</style>
