---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>IGNITE 2026 | The Future is Here</title>

    <link
      href="https://fonts.googleapis.com/css2?family=Syncopate:wght@400;700&family=Space+Grotesk:wght@300;500;700&display=swap"
      rel="stylesheet"
    />

    <!-- GSAP -->
    <!-- GSAP core -->
    <script type="module" src="/src/scripts/animations.client.js"></script>
  </head>

  <body class="bg-black text-white font-[Space_Grotesk] overflow-x-hidden">
    <!-- BACKGROUND -->
    <div
      class="fixed inset-0 -z-10 bg-[radial-gradient(circle_at_20%_30%,rgba(0,242,255,0.12),transparent_40%),radial-gradient(circle_at_80%_70%,rgba(0,242,255,0.08),transparent_40%)] animate-pulse"
    >
    </div>

    <!-- NAVBAR -->
    <nav
      class="fixed top-0 w-full h-16 md:h-20 px-4 md:px-20 flex items-center justify-between bg-black/70 backdrop-blur-xl border-b border-white/10 z-50"
    >
      <div class="font-[Syncopate] text-lg font-bold">
        IGNITE <span class="text-cyan-400">2026</span>
      </div>
      <a
          href="/login"
        class="bg-white text-black px-4 py-2 text-xs font-bold rounded-md hover:bg-cyan-400 transition"
      >
        LOG IN
      </a>
    </nav>

    <main class="pt-20">
      <!-- HERO -->
      <header
        class="min-h-screen flex items-center justify-center text-center px-4"
      >
        <div id="hero">
          <span
            class="hero-eyebrow block text-xs tracking-[0.4em] text-cyan-400 mb-6"
          >
            PREPARE FOR THE EXTRAORDINARY
          </span>

          <h1
            class="hero-title font-[Syncopate] font-bold leading-none text-[clamp(3rem,10vw,8rem)] drop-shadow-[0_0_30px_rgba(0,242,255,0.35)] mb-10"
          >
            IGNITION
          </h1>

          <div
            class="hero-timer mx-auto grid grid-cols-2 sm:grid-cols-4 gap-4 w-fit"
          >
            {
              ["days", "hours", "minutes", "seconds"].map((unit) => (
                <div class="timer-box aspect-square w-20 sm:w-24 md:w-28 bg-white/5 border border-white/10 rounded-xl flex flex-col items-center justify-center">
                  <span
                    id={unit}
                    class="font-[Syncopate] text-2xl sm:text-3xl text-cyan-400"
                  >
                    00
                  </span>
                  <span class="text-[10px] tracking-widest text-gray-400 uppercase mt-1">
                    {unit}
                  </span>
                </div>
              ))
            }
          </div>
        </div>
      </header>

      <!-- EVENTS -->
      <section id="events" class="section px-4 sm:px-10 md:px-20 py-24">
        <div class="mb-16 text-center">
          <h2 class="font-[Syncopate] text-4xl mb-4">
            THE <span class="text-cyan-400">ARENAS</span>
          </h2>
          <p class="text-gray-400 max-w-xl mx-auto">
            Four massive zones dedicated to the pinnacle of human achievement.
          </p>
        </div>

        <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
          {
            EVENTS.map((event) => (
              <div
                class="event-card group relative rounded-2xl overflow-hidden border border-white/10 bg-neutral-900 transition-transform duration-500 hover:-translate-y-3 hover:shadow-[0_0_40px_rgba(0,242,255,0.25)]"
                key={event.id}
              >
                <div
                  class="absolute inset-0 bg-cover bg-center transition-transform duration-700 group-hover:scale-110"
                  style={`background-image: url(${event.image});`}
                />

                <div class="absolute inset-0 bg-gradient-to-t from-black via-black/60 to-transparent" />

                <div class="relative p-6 flex flex-col justify-end min-h-[420px]">
                  <span class="event-icon text-4xl mb-4">{event.icon}</span>

                  <h3 class="font-[Syncopate] text-xl mb-2">{event.title}</h3>

                  <p class="text-sm text-gray-300 mb-6">{event.description}</p>

                  <a
                    href={event.href}
                    class="inline-flex items-center justify-center bg-cyan-400 text-black font-bold py-3 px-6 rounded-lg hover:bg-white transition"
                  >
                    EXPLORE
                  </a>
                </div>
              </div>
            ))
          }
        </div>
      </section>

      <!-- ABOUT -->
      <section id="about" class="section px-4 sm:px-10 md:px-20 py-24">
        <div
          class="rounded-3xl border border-white/10 bg-gradient-to-br from-neutral-900 to-black p-8 sm:p-16 text-center"
        >
          <h2 class="font-[Syncopate] text-3xl sm:text-4xl mb-6">
            TOMS COLLEGE OF <span class="text-cyan-400">ENGINEERING</span>
          </h2>
          <p class="text-gray-400 max-w-2xl mx-auto">
            Where innovation meets the soul of Kottayam. Join us for a journey
            beyond the horizon.
          </p>

          <div class="flex flex-col sm:flex-row justify-center gap-12 mt-12">
            <div class="badge">
              <strong class="block text-4xl text-cyan-400">B+</strong>
              <span class="text-xs tracking-widest text-gray-400">NAAC</span>
            </div>
            <div class="badge">
              <strong class="block text-4xl text-cyan-400">1M+</strong>
              <span class="text-xs tracking-widest text-gray-400">REACH</span>
            </div>
          </div>
        </div>
      </section>

      <!-- SOCIAL LINKS -->
      <div class="mt-14 flex justify-center gap-6">
        <!-- Instagram -->
        <a
          href="https://www.instagram.com/tomscollege"
          target="_blank"
          aria-label="Instagram"
          class="group w-12 h-12 flex items-center justify-center rounded-full
          border border-white/10 bg-white/5
          transition-all duration-300
          hover:-translate-y-1 hover:scale-110
          hover:border-cyan-400
          hover:shadow-[0_0_25px_rgba(0,242,255,0.4)]"
        >
          <svg
            viewBox="0 0 24 24"
            class="w-5 h-5 fill-white transition-colors duration-300 group-hover:fill-cyan-400"
          >
            <path
              d="M7 2C4.243 2 2 4.243 2 7v10c0 2.757 2.243 5 5 5h10c2.757 0 5-2.243 5-5V7c0-2.757-2.243-5-5-5H7zm10 2a3 3 0 013 3v10a3 3 0 01-3 3H7a3 3 0 01-3-3V7a3 3 0 013-3h10zm-5 3a5 5 0 100 10 5 5 0 000-10zm0 2a3 3 0 110 6 3 3 0 010-6zm5.5-.5a1.5 1.5 0 11-3 0 1.5 1.5 0 013 0z"
            ></path>
          </svg>
        </a>

        <!-- YouTube -->
        <a
          href="https://www.youtube.com/@TOMSCollegeofEngineering"
          target="_blank"
          aria-label="YouTube"
          class="group w-12 h-12 flex items-center justify-center rounded-full
          border border-white/10 bg-white/5
          transition-all duration-300
          hover:-translate-y-1 hover:scale-110
          hover:border-cyan-400
          hover:shadow-[0_0_25px_rgba(0,242,255,0.4)]"
        >
          <svg
            viewBox="0 0 24 24"
            class="w-5 h-5 fill-white transition-colors duration-300 group-hover:fill-cyan-400"
          >
            <path
              d="M23.498 6.186a2.97 2.97 0 00-2.092-2.1C19.555 3.5 12 3.5 12 3.5s-7.555 0-9.406.586a2.97 2.97 0 00-2.092 2.1A31.4 31.4 0 000 12a31.4 31.4 0 00.502 5.814 2.97 2.97 0 002.092 2.1C4.445 20.5 12 20.5 12 20.5s7.555 0 9.406-.586a2.97 2.97 0 002.092-2.1A31.4 31.4 0 0024 12a31.4 31.4 0 00-.502-5.814zM9.75 15.5v-7l6 3.5-6 3.5z"
            ></path>
          </svg>
        </a>

        <!-- Website -->
        <a
          href="https://toms.ac.in/"
          target="_blank"
          aria-label="Website"
          class="group w-12 h-12 flex items-center justify-center rounded-full
          border border-white/10 bg-white/5
          transition-all duration-300
          hover:-translate-y-1 hover:scale-110
          hover:border-cyan-400
          hover:shadow-[0_0_25px_rgba(0,242,255,0.4)]"
        >
          <svg
            viewBox="0 0 24 24"
            class="w-5 h-5 fill-white transition-colors duration-300 group-hover:fill-cyan-400"
          >
            <path
              d="M12 2a10 10 0 100 20 10 10 0 000-20zm7.93 9h-3.02a15.4 15.4 0 00-1.12-4.09A8.03 8.03 0 0119.93 11zM12 4c.88 0 2.32 1.91 2.88 5H9.12C9.68 5.91 11.12 4 12 4zM4.07 13h3.02a15.4 15.4 0 001.12 4.09A8.03 8.03 0 014.07 13zM4.07 11a8.03 8.03 0 013.14-4.09A15.4 15.4 0 006.09 11H4.07zm7.93 9c-.88 0-2.32-1.91-2.88-5h5.76C14.32 18.09 12.88 20 12 20zm1.93-2.91A15.4 15.4 0 0016.91 13h3.02a8.03 8.03 0 01-6 4.09z"
            ></path>
          </svg>
        </a>
      </div>
    </main>

    <footer class="py-16 text-center text-gray-500">
      <p class="text-xs tracking-[0.3em]">
        POWERED BY DEPARTMENT OF COMPUTER SCIENCE S6 ‚Ä¢ TOMS COLLEGE
      </p>

      <p class="mt-4 text-[8px] tracking-widest text-gray-600">
        CREATED BY AJAS DAISON ‚Ä¢ ADI JOLLY ‚Ä¢ SOORYA RAJ
      </p>
    </footer>

    <!-- TIMER -->
    <script define:vars={{ FEST_DATE }}>
      function updateTimer() {
        const now = Date.now();
        const distance = new Date(FEST_DATE).getTime() - now;
        if (distance < 0) return;

        const d = Math.floor(distance / (1000 * 60 * 60 * 24));
        const h = Math.floor((distance / (1000 * 60 * 60)) % 24);
        const m = Math.floor((distance / (1000 * 60)) % 60);
        const s = Math.floor((distance / 1000) % 60);

        days.textContent = String(d).padStart(2, "0");
        hours.textContent = String(h).padStart(2, "0");
        minutes.textContent = String(m).padStart(2, "0");
        seconds.textContent = String(s).padStart(2, "0");
      }

      setInterval(updateTimer, 1000);
      updateTimer();
    </script>

    <!-- ANIMATIONS -->
  </body>
</html>
