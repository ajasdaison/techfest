---
import "../styles/global.css";
---

<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Coordinator Login | TechFest 2026</title>
</head>

<body class="min-h-screen bg-[#020008] flex items-center justify-center text-white">
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_top,#00f3ff22,transparent_60%)]"></div>

  <form
    method="post"
    action="/actions/login"
    class="relative z-10 w-full max-w-md border border-cyan-400/30 bg-cyan-500/5 backdrop-blur-xl p-8 rounded-xl shadow-xl"
  >
    <h1 class="text-2xl font-bold tracking-widest uppercase text-cyan-300 mb-6 text-center">
      Coordinator Access
    </h1>

    <div class="space-y-4">
      <div>
        <label class="block text-xs uppercase tracking-widest text-cyan-400 mb-1">
          Username
        </label>
        <input
          name="username"
          required
          class="w-full bg-black/40 border border-cyan-400/30 px-4 py-2 rounded-md focus:outline-none focus:border-cyan-400"
        />
      </div>

      <div>
        <label class="block text-xs uppercase tracking-widest text-cyan-400 mb-1">
          Password
        </label>
        <input
          type="password"
          name="password"
          required
          class="w-full bg-black/40 border border-cyan-400/30 px-4 py-2 rounded-md focus:outline-none focus:border-cyan-400"
        />
      </div>
    </div>

    <button
      type="submit"
      class="mt-6 w-full bg-cyan-500/20 hover:bg-cyan-500/30 border border-cyan-400/40 py-2 rounded-md uppercase tracking-widest text-sm transition"
    >
      Login
    </button>

    <p class="mt-4 text-center text-xs text-cyan-400/60">
      Authorized personnel only
    </p>
  </form>
</body>
</html>

