---
import "../styles/global.css";
// This is the "frontmatter" - for server-side logic (won't be sent to the browser)
// We define variables here that we use in the HTML below.
const pageTitle = "IGNITE | TOMS College of Engineering Techfest";
const eventName = "IGNITE";
const collegeName = "TOMS College of Engineering";
const eventDate = "24th JANUARY 2026";
const taglineText = "Fuelling the Future of Innovation";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{pageTitle}</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Roboto:wght@300;400&family=Press+Start+2P&display=swap"
      rel="stylesheet"
    />
    <style>
      /* General Styles */
      :root {
        --primary-color: #00d4ff; /* Neon Blue */
        --accent-color: #ff33cc; /* Neon Pink/Magenta */
        --dark-bg: #0a0a0a;
        --mid-dark-bg: #0f0f0f;
        --text-light: #e0e0e0;
        --text-medium: #bbb;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Roboto", sans-serif;
        background-color: var(--dark-bg);
        color: var(--text-light);
        overflow-x: hidden;
        scroll-behavior: smooth;
      }

      /* Utility Classes */
      .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 20px;
      }

      /* Hero Section */
      .hero {
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        background: radial-gradient(circle at center, #1a1a2e 0%, #000000 100%);
        position: relative;
        overflow: hidden; /* For particles */
        isolation: isolate; /* Ensures z-index context for particles */
      }

      /* Animated Particles Background */
      .particles {
        position: absolute;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        background-image: url("https://www.transparenttextures.com/patterns/stardust.png");
        opacity: 0.2;
        animation: moveParticles 20s linear infinite;
        z-index: -1;
      }

      @keyframes moveParticles {
        from {
          background-position: 0 0;
        }
        to {
          background-position: 1000px 1000px;
        }
      }

      .hero-content {
        position: relative; /* To bring content above particles */
        z-index: 1;
        padding: 20px;
      }

      .presented-by {
        font-family: "Orbitron", sans-serif;
        font-size: 1.1rem;
        letter-spacing: 3px;
        color: var(--primary-color);
        margin-bottom: 15px;
        text-transform: uppercase;
        animation: fadeInTop 1.5s ease-out;
        text-shadow: 0 0 8px rgba(0, 212, 255, 0.4);
      }

      h1 {
        font-family: "Press Start 2P", cursive; /* Retro arcade font */
        font-size: 6.5rem; /* Slightly reduced for better mobile scale */
        font-weight: 700;
        margin: 10px 0;
        background: linear-gradient(to bottom, #fff 40%, #888 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow:
          0 0 40px rgba(255, 255, 255, 0.3),
          0 0 20px rgba(255, 255, 255, 0.2);
        animation:
          neonGlow 2s ease-in-out infinite alternate,
          fadeIn 2s ease-out;
        line-height: 0.9;
      }

      @keyframes neonGlow {
        from {
          text-shadow:
            0 0 10px #fff,
            0 0 20px var(--primary-color),
            0 0 30px var(--primary-color),
            0 0 40px var(--primary-color);
        }
        to {
          text-shadow:
            0 0 5px #fff,
            0 0 10px var(--primary-color),
            0 0 15px var(--primary-color),
            0 0 20px var(--primary-color);
        }
      }

      .tagline-container {
        min-height: 2rem; /* Reserve space for tagline */
        margin-bottom: 30px;
      }

      .tagline {
        font-family: "Orbitron", sans-serif;
        font-size: 1.6rem;
        color: var(--accent-color);
        letter-spacing: 2px;
        white-space: nowrap; /* Keep text on one line */
        overflow: hidden; /* Hide overflowing text */
        border-right: 0.15em solid var(--primary-color); /* The typing cursor */
        animation:
          typing 3s steps(40, end),
          blink-caret 0.75s step-end infinite;
        display: inline-block;
        text-shadow: 0 0 10px rgba(255, 51, 204, 0.6);
      }

      /* Typewriter Effect Animations */
      @keyframes typing {
        from {
          width: 0;
        }
        to {
          width: 100%;
        }
      }
      @keyframes blink-caret {
        from,
        to {
          border-color: transparent;
        }
        50% {
          border-color: var(--primary-color);
        }
      }

      .date-box {
        border: 2px solid var(--primary-color);
        padding: 12px 35px;
        font-family: "Orbitron", sans-serif;
        font-size: 1.6rem;
        border-radius: 50px;
        box-shadow: 0 0 20px rgba(0, 212, 255, 0.6);
        background: rgba(0, 0, 0, 0.4);
        transition: all 0.3s ease;
        animation: fadeInBottom 1.5s ease-out;
        text-shadow: 0 0 5px rgba(255, 255, 255, 0.3);
      }

      .date-box:hover {
        transform: scale(1.05);
        box-shadow:
          0 0 30px rgba(0, 212, 255, 0.8),
          0 0 50px rgba(0, 212, 255, 0.4);
        cursor: pointer;
      }

      /* Welcome Section */
      .welcome-section {
        padding: 120px 20px;
        text-align: center;
        background: var(--mid-dark-bg);
        position: relative;
        overflow: hidden;
      }

      .welcome-content {
        max-width: 900px;
        margin: 0 auto;
        animation: slideInUp 1s ease-out forwards;
        opacity: 0; /* Hidden by default, shown by animation */
      }

      h2 {
        font-family: "Orbitron", sans-serif;
        font-size: 3rem;
        margin-bottom: 25px;
        color: var(--primary-color);
        text-shadow: 0 0 10px rgba(0, 212, 255, 0.5);
        animation: fadeIn 1s ease-out forwards;
      }

      .welcome-section p {
        line-height: 1.9;
        font-size: 1.15rem;
        color: var(--text-medium);
        margin-bottom: 40px;
      }

      .btn {
        margin-top: 20px;
        padding: 18px 45px;
        font-family: "Orbitron", sans-serif;
        background: transparent;
        color: var(--primary-color);
        border: 2px solid var(--primary-color);
        cursor: pointer;
        transition: all 0.4s ease;
        text-decoration: none;
        display: inline-block;
        font-size: 1.1rem;
        letter-spacing: 1px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 212, 255, 0.3);
        text-transform: uppercase;
      }

      .btn:hover {
        background: var(--primary-color);
        color: var(--dark-bg);
        box-shadow:
          0 0 30px var(--primary-color),
          0 0 50px var(--primary-color);
        transform: translateY(-5px) scale(1.02);
      }

      /* General Animations */
      @keyframes fadeIn {
        from {
          opacity: 0;
        }
        to {
          opacity: 1;
        }
      }

      @keyframes fadeInTop {
        from {
          opacity: 0;
          transform: translateY(-50px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes fadeInBottom {
        from {
          opacity: 0;
          transform: translateY(50px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes slideInUp {
        from {
          opacity: 0;
          transform: translateY(80px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      /* Media Queries for Responsiveness */
      @media (max-width: 1024px) {
        h1 {
          font-size: 5rem;
        }
        .tagline {
          font-size: 1.4rem;
        }
        .date-box {
          font-size: 1.4rem;
        }
        h2 {
          font-size: 2.5rem;
        }
      }

      @media (max-width: 768px) {
        .presented-by {
          font-size: 0.9rem;
        }
        h1 {
          font-size: 3.5rem;
          margin: 5px 0;
        }
        .tagline {
          font-size: 1rem;
          letter-spacing: 1px;
        }
        .date-box {
          font-size: 1.1rem;
          padding: 10px 25px;
        }
        h2 {
          font-size: 2rem;
        }
        .welcome-section p {
          font-size: 1rem;
        }
        .btn {
          padding: 12px 30px;
          font-size: 0.9rem;
        }
      }

      @media (max-width: 480px) {
        h1 {
          font-size: 2.5rem;
        }
        .tagline {
          font-size: 0.8rem;
        }
        .date-box {
          font-size: 0.9rem;
          padding: 8px 20px;
        }
        h2 {
          font-size: 1.5rem;
        }
      }
    </style>
  </head>
  <body>
    <section class="hero">
      <div class="particles"></div>
      <div class="hero-content">
        <p class="presented-by">{collegeName} Presents</p>
        <h1>{eventName}</h1>
        <div class="tagline-container">
          <span class="tagline">{taglineText}</span>
        </div>
        <div class="date-box">{eventDate}</div>
      </div>
    </section>

    <section class="welcome-section">
      <div class="container welcome-content">
        <h2>Welcome to the Spark</h2>
        <p>
          Get ready to witness a fusion of creativity and technology.
          <strong>{eventName}</strong> is the annual flagship techfest of {
            collegeName
          }. We invite the brightest minds to compete, collaborate, and innovate
          through a series of workshops, hackathons, and technical challenges
          designed to push the boundaries of what's possible. Join us for a
          journey into the future of tech!
        </p>
        <a href="/details" class="btn">EXPLORE</a>
      </div>
    </section>
  </body>
</html>
